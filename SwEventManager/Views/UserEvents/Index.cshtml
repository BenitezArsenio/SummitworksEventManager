@model IEnumerable<SwEventManager.Models.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Events</h2>



@{
    ViewBag.Title = "Event Manager";
    ViewBag.pageLabel1 = "Event Manager";
    ViewBag.pageLabel2 = "User Manager";
    ViewBag.Index = "Index";
    ViewBag.AdminEvents = "AdminEvents";
    ViewBag.AdminUsers = "AdminUsers";
    ViewBag.UserEvents = "UserEvents";
    ViewBag.UsView = "User View";
}

<table class="table">
    <tr>
        <th>Event Name</th>
        <th>Catagory</th>
        <th>Location</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Purchase</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        <a href="@Url.Action("Details","UserEvents",new { id = item.EventID })">
            <Label>
                @Html.DisplayFor(modelItem => item.EventName)
            </Label>
        </a>
    </td>
    <td>@Html.DisplayFor(modelItem => item.EventCategory)</td>
    <td>@Html.DisplayFor(modelItem => item.Location)</td>
    <td>@item.StartDate.ToShortDateString()</td>
    <td>@item.EndDate.ToShortDateString()</td>
    <td>@item.StartTime.ToString()</td>
    <td>@item.EndTime.ToString()</td>


    <td>@Html.ActionLink("Purchase", "Create", new { id = item.EventID })</td>
  

</tr>
    }

</table>



