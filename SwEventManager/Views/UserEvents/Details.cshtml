@model SwEventManager.Models.Event

@{
    ViewBag.Title = "Event Details";
}

<h2>Event Details</h2>

<hr />
<div class="DisplayEvent">



    <div>
        <b>Event Name: </b>
        @Html.DisplayFor(model => model.EventName)
    </div>
    <div>
        <b>Event Description: </b>

        @Html.DisplayFor(model => model.EventDescription)
    </div>
    <div class="DisplayEvent">
        <b>Event Category: </b>

        @Html.DisplayFor(model => model.EventCategory)
    </div>
    <div class="DisplayEvent">
        <b>Start Date: </b>

        @Html.DisplayFor(model => model.StartDate)
    </div>
    <div class="DisplayEvent">
        <b>End Date: </b>

        @Html.DisplayFor(model => model.EndDate)
    </div>
    <div class="DisplayEvent">
        <b>Start Time: </b>

        @Html.DisplayFor(model => model.StartTime)
    </div>
    <div class="DisplayEvent">
        <b>End Time: </b>

        @Html.DisplayFor(model => model.EndTime)
    </div>
    <div class="DisplayEvent">
        <b>Location: </b>

        @Html.DisplayFor(model => model.Location)
    </div>
    <div class="DisplayEvent">
        <b>Open For Registration: </b>

        @Html.DisplayFor(model => model.OpenForRegistration)
    </div>
    <div class="DisplayEvent">
        <b>Adult Price: </b>

        @Html.DisplayFor(model => model.AdultPrice)
    </div>
    <div class="DisplayEvent">
        <b>Child Price: </b>

        @Html.DisplayFor(model => model.ChildPrice)
    </div>
    <div class="DisplayEvent">
        <b>Company Name: </b>

        @Html.DisplayFor(model => model.CompanyName)
    </div>

    <br />
    <a>
        <img src="@Model.imagePath" alt="image" style="width:500px">
        @*<img src="@Url.Content(item.imagePath)" alt="Image" />
            <img src="@Url.Content(item.imagePath)" alt="Image" />*@
    </a>
    <br />




</div>
<br />
<p>
    @{int idEvent = Model.EventID; }

    @if (Model.OpenForRegistration)
    {
      

        <a href="@Url.Action("Create","Orders",new { id = idEvent })">
            <Label>
                Register
            </Label>
        </a>

    }
    <br />
    @Html.ActionLink("Back to Events", "Index", "UserEvents")
</p>
